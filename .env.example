# Environment Configuration for Mango Disease Classification App

# Database Configuration
DATABASE_URL=sqlite:///mango_disease.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/dbname

# Flask Configuration
SESSION_SECRET=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Google Colab Integration
# Set this to your Colab ngrok URL when running the inference server
COLAB_API_URL=

# Example Colab URL format:
# COLAB_API_URL=https://1234-56-78-90-123.ngrok-free.app

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads

# Model Configuration
MODEL_PATH=models/
DEFAULT_MODEL=efficientnet_b0

# Logging
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_SECRET=generate-a-strong-random-secret-key